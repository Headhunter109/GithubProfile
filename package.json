{
    "name": "github-profile",
    "version": "1.0.0",
    "description": "Tool of visualizing GitHub profile",
    "main": "index.js",
    "repository": "git@github.com:thundernet8/GithubProfile.git",
    "keywords": [
        "github profile",
        "visualization",
        "react",
        "koa",
        "echarts"
    ],
    "author": "wuxueqian <wuxueqian2010@hotmail.com>",
    "license": "MIT",
    "scripts": {
        "dll": "tsc env.ts --lib es2015,dom --target es5 && cross-env NODE_ENV=production webpack -p --hide-modules --config webpack/dll.conf.babel.js",
        "dll:dev": "tsc env.ts --lib es2015,dom --target es5 && cross-env NODE_ENV=development webpack --hide-modules --config webpack/dll.conf.babel.js",
        "build": "rimraf dist && mkdirp dist && tsc env.ts --lib es2015,dom --target es5 && cross-env NODE_ENV=production npm run dll && cross-env NODE_ENV=production webpack -p --progress --hide-modules --config webpack/prod.conf.babel.js",
        "build:dev": "rimraf dist && mkdirp dist && cross-env NODE_ENV=development npm run dll:dev && webpack --progress --hide-modules --config webpack/dev.conf.babel.js",
        "build:ssr": "tsc env.ts --lib es2015,dom --target es5 && NODE_ENV=production webpack --progress --hide-modules --config webpack/ssr.conf.babel.js && tsc ssr/index.ts --lib es2015,dom",
        "build:api": "tsc server/index.ts --lib dom,es2015 --target es5 ",
        "build:all": "npm run build:api && npm run build && npm run build:ssr",
        "analyze": "rimraf dist && mkdirp dist && cross-env ANALYZE_ENV=true npm run build",
        "dev": "npm run build:dev && webpack-dev-server --config webpack/dev.conf.babel.js",
        "start:ssr": "cross-env NODE_ENV=production forever start ssr/index.js",
        "start:api": "cross-env NODE_ENV=production forever start server/index.js",
        "restart": "forever restart ssr/index.js",
        "stop": "forever stop ssr/index.js",
        "tasklist": "forever list",
        "lint": "npm run lint:ts && npm run lint:style",
        "lint:ts": "tslint -e node_modules typings -c .tslintrc.json src/**/*.tsx",
        "lint:style": "stylelint \"src/**/*.less\" --syntax less",
        "lint-staged": "lint-staged",
        "lint-staged:ts": "tslint --fix -c .tslintrc.json",
        "lint-staged:style": "stylelint --syntax less",
        "docker:api": "cross-env NODE_ENV=production CONTAINER_ENV=docker node server/index.js",
        "docker:ssr": "cross-env NODE_ENV=production CONTAINER_ENV=docker node ssr/index.js",
        "docker": "npm run build:all && cd deploy && docker-compose start",
        "test": "ts-mocha -p ./ test/**/*.spec.ts"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "lint-staged:ts"
        ],
        "src/**/*.less": [
            "lint-staged:style"
        ]
    },
    "pre-commit": "lint-staged",
    "devDependencies": {
        "@types/koa": "^2.0.43",
        "@types/koa-route": "^3.2.3",
        "@types/node": "^8.5.2",
        "@types/react": "^16.0.31",
        "assets-webpack-plugin": "^3.5.1",
        "babel-loader": "^7.1.2",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-register": "^6.26.0",
        "copy-webpack-plugin": "^4.3.0",
        "cross-env": "^5.1.1",
        "css-loader": "^0.28.7",
        "cssnano": "^3.10.0",
        "custom-tslint-rules-collection": "^1.0.0",
        "customized-progress-webpack-plugin": "^0.0.3",
        "extract-text-webpack-plugin": "^3.0.2",
        "file-loader": "^1.1.6",
        "html-webpack-plugin": "^2.30.1",
        "js-yaml": "^3.10.0",
        "less": "^2.7.3",
        "less-loader": "^4.0.5",
        "lint-staged": "^6.0.0",
        "optimize-css-assets-webpack-plugin": "^3.2.0",
        "postcss-cssnext": "^3.0.2",
        "postcss-loader": "^2.0.9",
        "postcss-smart-import": "^0.7.6",
        "pre-commit": "^1.2.2",
        "precss": "^2.0.0",
        "prettier": "^1.9.2",
        "style-loader": "^0.19.1",
        "stylelint": "^8.4.0",
        "stylelint-config-standard": "^18.0.0",
        "ts-loader": "^3.2.0",
        "tslint-eslint-rules": "^4.1.1",
        "tslint-react": "^3.2.0",
        "typescript": "^2.6.2",
        "url-loader": "^0.6.2",
        "webpack": "^3.10.0",
        "webpack-bundle-analyzer": "^2.9.1",
        "webpack-dev-server": "^2.9.7"
    },
    "dependencies": {
        "@koa/cors": "2",
        "axios": "^0.17.1",
        "babel-polyfill": "^6.26.0",
        "bluebird": "^3.5.1",
        "bufferutil": "^3.0.3",
        "classnames": "^2.2.5",
        "dotenv": "^5.0.0",
        "echarts": "^3.8.5",
        "github": "^13.0.1",
        "koa": "^2.4.1",
        "koa-bodyparser": "^4.2.0",
        "koa-compress": "^2.0.0",
        "koa-route": "^3.2.0",
        "koa-send": "^4.1.2",
        "koa-static": "^4.0.2",
        "mobx": "^3.4.1",
        "mobx-react": "^4.3.5",
        "moment": "^2.20.1",
        "node-schedule": "^1.2.5",
        "qrcode.react": "^0.7.2",
        "react": "^16.2.0",
        "react-document-meta": "^2.1.2",
        "react-dom": "^16.2.0",
        "react-router-dom": "^4.2.2",
        "redis": "^2.8.0",
        "utf-8-validate": "^4.0.0",
        "ws": "^3.3.3"
    }
}
